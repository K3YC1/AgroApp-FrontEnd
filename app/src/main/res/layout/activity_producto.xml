<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/gris_solido" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="567dp"
            android:layout_height="449dp"
            android:layout_gravity="start|top"
            android:layout_marginTop="-400dp"
            android:layout_marginBottom="200dp"
            app:cardCornerRadius="800dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,VisualLintBounds">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="549dp"
                android:scaleType="fitXY"
                android:src="@drawable/fondo"
                tools:ignore="ContentDescription,VisualLintBounds" />

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnsalir"
                    android:layout_width="44dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="23dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/arrow_left_solid"
                    tools:ignore="UseAppTint" />

                <ImageView
                    android:id="@+id/logo_agro"
                    android:layout_width="83dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="95dp"
                    app:srcCompat="@drawable/agroemywhitelogo" />

                <ImageView
                    android:id="@+id/carrito"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="82dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/cart_shopping_solid"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="150dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/ivimagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/agroemylogocolor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="370dp"
                android:layout_height="540dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="40dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivagregar"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/plus_solid"
                            android:tint="@color/colorcategorias"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/tvnombrep"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center"
                            android:text="TextView"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivdeseo"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/heart_solid"
                            android:tint="@color/colorcategorias"
                            tools:ignore="UseAppTint" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvpreciop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/agro_verde"
                        android:textSize="20sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#EBEBEB"
                        android:elevation="50dp"
                        app:cardCornerRadius="30dp"
                        app:cardUseCompatPadding="false">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvdescripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:padding="20dp"
                                    android:text="TextView"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </ScrollView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>